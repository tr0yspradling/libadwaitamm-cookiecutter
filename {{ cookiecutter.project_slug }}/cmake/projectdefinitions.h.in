#ifndef CONFIG_H_IN
#define CONFIG_H_IN

#include <string>
#include <glibmm/ustring.h>

namespace projectdefinitions {
    static std::string getProjectName() {
        return "@PROJECT_NAME@";
    }

    static std::string getProjectVersion() {
        return "@PROJECT_VERSION@";
    }

    static std::string getApplicationID() {
        return "@APPLICATION_ID@";
    }

    static std::string getApplicationPrefix() {
        return "@APPLICATION_PREFIX@";
    }

    static std::string getGeneratedFilesDirectory() {
        return "@GENERATED_FILES_DIR@";
    }

    static std::string getGeneratedDataDirectory() {
        return "@DATA_DIR@";
    }

    static Glib::ustring getPrefixedPath(const Glib::ustring& resource) {
        return Glib::ustring(getApplicationPrefix()) += resource;
    }
}

#endif  // CONFIG_H_IN
